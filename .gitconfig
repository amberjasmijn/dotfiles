[user]
	name = Amber Brookhuis	
	email = amberbrookhuis@gmail.com
	username = amberjasmijn

[core]
	editor = vim
        excludesfile = /Users/amberbrookhuis/.gitignore_global
        autocrlf = input

[diff]
	tool = vimdiff

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 

[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[color]
        branch = true

[color "diff"]
        meta = blue black bold
        
[alias]
        adog = log --all --decorate --oneline --graph
        showlog = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
